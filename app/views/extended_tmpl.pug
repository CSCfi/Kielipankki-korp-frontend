div(ng-controller='ExtendedSearch')
    
  global-filters(lang="lang")
    
  #query_table(extended-list, cqp="cqp", lang="lang", repeat-error="repeatError")

  div(ng-show="repeatError" style="color: red; margin-bottom: 10px;") {{'repeat_error' | loc:lang}}

  search-submit(pos='right')
  span(rel='localize[within]')

  select.within_select(ng-model="within"
      ng-options="item.value as ('within_' + item.value | loc:lang) for item in withins")

  //- Show only if the localization of within_postp is non-empty;
  //- empty localization value is replaced with the key
  span(ng-if="('within_postp' | loc:lang) != 'within_postp'")
    | {{'within_postp' | loc:lang}}
