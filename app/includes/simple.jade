  #similar_wrapper(ng-show="relatedObj", ng-class="{open : relatedLimit == 9999}")
    .col(ng-repeat="obj in relatedObj") 
        a.header(target="_blank", ng-href="http://spraakbanken.gu.se/karp/#lexicon=swefn&search=sense%7Cswefn--{{obj.label}}") {{stringifyRelatedHeader(obj.label)}}
        ul
          li(ng-repeat="wd in obj.words | limitTo:relatedLimit") 
              a.link(ng-click="clickRelated(wd)") {{stringifyRelated(wd) + " "}}
    
    div(ng-show="relatedLimit != 9999", ng-click="relatedLimit = 9999")
      i.circle_icon.fa.fa-long-arrow-down
    div(ng-show="relatedLimit == 9999", ng-click="relatedLimit = relatedDefault")
      i.circle_icon.fa.fa-long-arrow-up
  .clearfix
