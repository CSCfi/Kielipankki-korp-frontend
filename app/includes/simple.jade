#korp-simple(constr='SimpleSearch', constr-name='simpleSearch', ng-controller='SimpleCtrl')
  form.simple_form
    label(for='simple_text') {{'search_for' | loc}}
    input#simple_text(type='text', ng-model='simple_text', placeholder='{{lemgramToString(placeholder)}}'
        autofocus)
    span#keyboard.ui-state-default.specialkey ð
    search-submit
    span 
        |  {{'and_include' | loc}} 
    input#prefixChk(type='checkbox', ng-model="prefix") 
    label(for='prefixChk')  {{'prefix' | loc}} 
    input#suffixChk(type='checkbox', ng-model="suffix") 
    label(for='suffixChk')  {{'suffix' | loc}} 
    span  {{'and' | loc}} 
    input#caseChk(type='checkbox', ng-model="isCaseInsensitive") 
    label(for='caseChk')  {{'case_insensitive' | loc}}  
